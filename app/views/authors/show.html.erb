<div class="element-container">
  <div class="content-header">
    <h3><%= @author.name %></h3>
    <% if @author.tags.length > 0 %>
      <div class='tags'>
        Tags:
        <% @author.tags.order(:tag).distinct.pluck(:tag).each do |t| %>
          <div class="chip">
            <%= t.split.map(&:capitalize).join(' ') %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="content-body">
    <b class='biography'><%= simple_format(@author.biography) %></b>
  </div>
</div>
