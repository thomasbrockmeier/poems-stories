<% @poems.each do |poem| %>
  <%= link_to poem do %>
    <div class='poem'>
      <div class='title'>
        <h3><%= poem.title %></h3>
      </div>
      <div class='author'>
        <h5><%= poem.author.name %></h5>
      </div>
      <div class='metaphor'>
        <%= simple_format(poem.metaphor) %>
      </div>
      <% if poem.tags.length > 0 %>
        <div class='tags'>
          Tags:
          <% poem.tags.each do |t| %>
            <%= t.tag.capitalize %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
