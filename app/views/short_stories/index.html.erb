<% @short_stories.each do |story| %>
  <%= link_to story do %>
    <div class='short-story'>
      <div class='title'>
        <h3><%= story.title %></h3>
      </div>
      <div class='author'>
        <h5><%= story.author.name %></h5>
      </div>
      <div class='description'>
        <%= simple_format(story.description) %>
      </div>
      <% if story.tags.length > 0 %>
        <div class='tags'>
          Tags:
          <% story.tags.each do |t| %>
            <%= t.tag.capitalize %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
